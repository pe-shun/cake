<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <div class="navbar-brand" >
       <%= link_to "CAKE", root_path, class:"navbar-brand",class:"btn btn-sm btn-success" %>
       </div>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">

       <% if customer_signed_in? %>

       <li>
         <%= link_to "商品一覧", url:public/items, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
       </li>

       <li>
         <%= link_to "会員一覧", class:"nav-link text-light",class:"btn btn-sm btn-success" %>
       </li>

        <li>
          <%= link_to "注文履歴書一覧", class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ジャンル一覧", class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ログアウト", destroy_customer_session_path , method: :delete, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <% else %>
        <li>
          <%= link_to "About", url:about_path, class:"nav-link text-light",class:"btn btn-sm btn-success"  %>
        </li>

        <li>
          <%= link_to "商品一覧", class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "新規登録", new_customer_registration_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ログイン", new_customer_session_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>
        <% end %>
       </ul>
       </div>
      </div>
      </nav>
　 </header>

　 <!--フラッシュメッセージ表示-->
　 <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
   <% end %>

   <%= yield %>


  <main class="mb-auto">
  </main>

  <footer>
   <div class="container mt-5">
    <div class="row">
     <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
     </div>
    </div>
   </div>
  </footer>

 </body>

</html>
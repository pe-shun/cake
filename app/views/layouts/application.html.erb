<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <div class="navbar-brand" >
       <%= link_to "CAKE", root_path, class:"navbar-brand",class:"btn btn-sm btn-success" %>
       </div>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">

       <% if admin_signed_in? %>

       <li>
         <%= link_to "商品一覧", admin_items_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
       </li>

       <li>
         <%= link_to "会員一覧", admin_customer_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
       </li>

        <li>
          <%= link_to "注文履歴書一覧",admin_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ジャンル一覧",admin_genres_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ログアウト", destroy_admin_session_path , method: :delete, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <% elsif customer_signed_in? %>

        <li>
         <%= link_to "マイページ", customer_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
         <%= link_to "商品一覧", items_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
         <%= link_to "カート", cart_items_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
        　<%= link_to "ログアウト", destroy_customer_session_path , method: :delete, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <% else %>
        <li>
          <%= link_to "About", about_path, class:"nav-link text-light",class:"btn btn-sm btn-success"  %>
        </li>

        <li>
          <%= link_to "商品一覧", items_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "新規登録", new_customer_registration_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>

        <li>
          <%= link_to "ログイン", new_customer_session_path, class:"nav-link text-light",class:"btn btn-sm btn-success" %>
        </li>
        <% end %>
       </ul>
       </div>
      </div>
      </nav>
　 </header>

　 <!--フラッシュメッセージ表示-->
　 <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
   <% end %>

   <%= yield %>


  <main class="mb-auto">
  </main>
 </body>

</html>